# 1 + 3
print(1+3) 
# 1 , 2, 3, 4, sep=' + '
print(1 , 2, 3, 4, sep=' + ')
# '1','2','3','4', sep=' + '
print('1','2','3','4', sep=' + ') 
# 1 + 2 + 3 + 4
a = 1 + 2 + 3 + 4
# a
print(a) 
# 1 + 2 + 3 + 4, end='!'
print(1 + 2 + 3 + 4, end='!') 
# just a line
print() 
print('some people like have a vacations in the weekend', end='!!!')